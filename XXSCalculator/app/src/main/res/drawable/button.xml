<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/btnDown"/>
            <stroke android:width="1sp" android:color="@color/btnStroke"/>
            <corners android:radius="10sp"/>
            <padding android:left="2sp"
                android:top="5sp"
                android:right="5sp"
                android:bottom="5sp"/>
        </shape>
    </item>
    <item >
        <shape>
            <gradient android:startColor="@color/btnStart"
                android:endColor="@color/btnEnd"
                android:angle="270"/>
            <stroke android:width="1sp" android:color="@color/btnStroke"/>
            <corners android:radius="10sp"/>
            <padding android:left="5sp"
                android:top="5sp"
                android:right="5sp"
                android:bottom="5sp"/>
        </shape>
    </item >
</selector>